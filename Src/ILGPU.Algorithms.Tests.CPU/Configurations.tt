    [Collection("CPUContextCollection<#= optLevel #>")]
    public sealed partial class <#= name #> : <#= config.Name #>
    {
        public <#= name #>(
            ITestOutputHelper output,
            CPUTestContext<#= optLevel #> testContext)
            : base(output, testContext)
        { }
    }

<#      } #>
<# } #>
